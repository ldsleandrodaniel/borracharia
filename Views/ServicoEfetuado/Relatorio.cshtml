@model IEnumerable<borracharia.Models.ServicoEfetuado>

@{
    ViewData["Title"] = "Relatório de Serviços";

    // Obtém a data da query string ou usa hoje como padrão
    var dataFiltroStr = Context.Request.Query["data"].FirstOrDefault();
    DateTime dataFiltro;

    if (!DateTime.TryParse(dataFiltroStr, out dataFiltro))
    {
        dataFiltro = DateTime.Today;
    }

    // Filtra os itens (Data >= data selecionada)
    var servicosFiltrados = Model.Where(item => item.Data.Date >= dataFiltro.Date).ToList();

    // Calcula o total
    var total = servicosFiltrados.Sum(item => item.Valor);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-graph-up"></i> @ViewData["Title"]</h2>
        <div class="d-flex align-items-center">
            <!-- Filtro por data (>= data selecionada) -->
            <div class="mx-3">
                <label for="dataFiltro" class="form-label">Data:</label>
                <input type="date"
                       id="dataFiltro"
                       class="form-control"
                       value="@dataFiltro.ToString("yyyy-MM-dd")"
                       onchange="filtrarPorData()" />
            </div>
          
        </div>
        <button onclick="window.print()" class="btn btn-secondary">
            <i class="bi bi-printer"></i> Imprimir
        </button>
    </div>

    <!-- Card com o total -->
    <div class="card mb-4 border-success">
        <div class="card-body bg-light">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title">
                        <i class="bi bi-calendar-check"></i> Período:
                    </h5>
                    <p class="card-text">A partir de @dataFiltro.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-6 text-end">
                    <h5 class="card-title text-success">
                        <i class="bi bi-cash-stack"></i> Total Recebido:
                    </h5>
                    <p class="card-text fs-4 fw-bold text-success">@total.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de serviços -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Serviço</th>
                    <th>Data</th>
                    <th class="text-end">Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in servicosFiltrados)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Servico.Nome)</td>
                        <td>@item.Data.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-end">@item.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script para recarregar a página ao alterar a data -->
<script>
    function filtrarPorData() {
        const dataSelecionada = document.getElementById("dataFiltro").value;
        window.location.href = `?data=${dataSelecionada}`;
    }
</script>